{
	"name": "electron-export",
	"version": "0.1.0",
	"private": true,
	"author": {
		"name": "Brandon Padilla",
		"email": "brandon.padilla@broadridge.com",
		"url": "https://github.com/Astrobinary"
	},
	"build": {
		"appId": "com.broadridge.electron-export",
		"productName": "Electron Export",
		"copyright": "Copyright Â© 2019 ${author}",
		"files": [
			"build/**/*",
			"node_modules/**/*",
			"srcs/helpers/**"
		],
		"directories": {
			"buildResources": "assets"
		}
	},
	"dependencies": {
		"@babel/runtime": "^7.5.5",
		"electron-is-dev": "^1.1.0",
		"handlebars": "^4.1.2",
		"handlebars-loader": "^1.7.1",
		"node-sass": "^4.12.0",
		"pretty": "^2.0.0",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"react-scripts": "3.0.1",
		"xml-js": "^1.6.11"
	},
	"homepage": "./",
	"main": "public/electron.js",
	"scripts": {
		"dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && nodemon --watch ./src/* --watch ./public/electron.js --exec electron . \"",
		"start": "rescripts start",
		"build": "rescripts build",
		"postinstall": "electron-builder install-app-deps",
		"preelectron-pack": "yarn build",
		"electron-pack": "electron-builder -w"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version"
		]
	},
	"devDependencies": {
		"@rescripts/cli": "^0.0.11",
		"@rescripts/rescript-env": "^0.0.10",
		"concurrently": "^4.1.1",
		"cross-env": "^5.2.0",
		"electron": "^5.0.8",
		"electron-builder": "^21.1.1",
		"node-cmd": "^3.0.0",
		"nodemon": "^1.19.1",
		"typescript": "^3.5.3",
		"wait-on": "^3.3.0"
	}
}
